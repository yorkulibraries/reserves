<div class="primo-result">
  <h4 class="distinct strong title"><%= record.title %></h4>

  <div class="row">
    <div class="col-md-10">
      <p class="result-field">
        <span>Author:</span>
        <strong><%= record.author %></strong>
      </p>
      <p class="result-field"><span>Callnumber:</span>
        <strong><%= record.callnumber %></strong>
      </p>
      <p class="result-field"><span>ISBN/ISSN:</span>
        <strong><%= record.isbn_issn %></strong>
      </p>
      <p class="result-field"><span>Publisher:</span>
        <strong><%= record.publisher %></strong>
      </p>
      <p class="result-field"><span>Edition:</span>
        <strong><%= record.edition %></strong>
      </p>
      <p class="result-field"><span>Description:</span>
        <strong><%= record.description %></strong>
      </p>
      <p class="result-field"><span>Main Location:</span>
        <strong><%= record.main_location %></strong>
      </p>
    </div>


    <div class="col-md-2 text-center ">
      <p class="strong"><%= record.item_type.humanize if record.item_type %></p>
      <p>
        <a href="javascript:void(0);" class="usethis btn btn-sm btn-success"
          data-json="<%= record.to_json %>">


          Use This
        </a>
      </p>

      <img class="bookcover" src="https://www.library.yorku.ca/find/bookcover.php?isn=<%= record.isbn_issn %>&amp;size=small" alt="Bookcover">


    </div>
      <!-- Hidden elements -->

  </div>

</div>

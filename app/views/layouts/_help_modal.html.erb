<div class="modal fade" id="help_assistance_modal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-bs-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title">Help/Assistance</h4>
      </div>
      <div class="modal-body">
        <h4><%= Setting.help_title %></h4>
        <%= simple_format Setting.help_body %>
        <hr/>
        <p> <a href="<%= Setting.help_link %>" target="_blank"><span class="fa fa-question"></span> Get More Help</a></p>
        <%= simple_format Setting.help_contact %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-bs-dismiss="modal">Close</button>
      </div>

    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
